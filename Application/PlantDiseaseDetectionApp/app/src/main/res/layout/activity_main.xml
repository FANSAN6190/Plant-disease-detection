<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:ignore="ExtraText">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="469dp"
            android:orientation="vertical"
            android:background="#474a48">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="112dp"
                android:background="@color/black">

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="POTATO DISEASE DETECTION"
                    android:textAlignment="center"
                    android:textColor="#e8f1f2"
                    android:textSize="40dp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/imgCamera"
                android:layout_width="match_parent"
                android:layout_height="308dp"
                app:srcCompat="@drawable/img_1">


            </ImageView>



            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="45dp"
                android:text="Upload or Capture Image"
                android:textColor="@color/white"
                android:textSize="28dp"
                android:textAlignment="center"
                ba/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="122dp"
                android:layout_height="match_parent"
                android:background="#2c302e"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="match_parent"
                    android:layout_height="119dp"
                    android:clickable="true"
                    android:padding="10dp"
                    app:srcCompat="@drawable/img_8" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:clickable="true"
                    android:padding="10dp"
                    app:srcCompat="@drawable/img_10" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="#7a9e7e">

                <Button
                    android:id="@+id/button"
                    android:layout_width="match_parent"
                    android:layout_height="65dp"
                    android:backgroundTint="#2689D8"
                    android:clickable="true"
                    android:text="Predict Results"
                    android:textSize="30dp" />
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>